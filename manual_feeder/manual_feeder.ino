#include "arduino_secrets.h"

/**/// Servo - Version: 1.1.7#include <Servo.h>int potPin = A0;int potVal;// Servo object and positionServo turningServo;int servoPin = 9;int servoPos = 0;int getFoodPos = 128;int dropFoodPos = 58;// Interruptvolatile boolean feedFishFlag = false;  // volatile as interrupts change itint interruptPin = 2;void setup() {    pinMode(potPin, INPUT);        // pinMode(interruptPin, INPUT_PULLUP);  # Using physical pull down    attachInterrupt(digitalPinToInterrupt(interruptPin),feedFish,RISING);        turningServo.attach(servoPin);  // attaches the servo on pin 9 to the servo object    turningServo.write(getFoodPos);    Serial.begin(9600);}void loop() {    potVal = analogRead(potPin);        // Get val from pot and move servo to it    servoPos = map(potVal, 0, 1023, 30, 150);  // 0,180 for max server angles    // turningServo.write(servoPos);        // // Switch servo between positions    // turningServo.write(getFoodPos);    // delay(1000);    // turningServo.write(dropFoodPos);    // delay(1000);        if (feedFishFlag) {      turningServo.write(getFoodPos);      delay(500);      turningServo.write(dropFoodPos);      delay(500);      turningServo.write(getFoodPos);      delay(500);      feedFishFlag = false;    }        // Serial.println("Pot: " + (String)(potVal) + " Ser: " + (String)(servoPos));    delay(100);}void feedFish() {    feedFishFlag = true;}